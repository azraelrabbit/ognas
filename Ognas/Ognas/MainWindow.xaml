<Window x:Class="Ognas.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="768" Width="1024">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="35"   />
            <RowDefinition Height="*"/>
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="800" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Canvas Grid.Row="0"  Grid.Column="0" Grid.ColumnSpan="2">

        </Canvas>
        <Canvas Grid.Row="1"  Grid.Column="0" Background="#dcdcdc" >

        </Canvas>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
            <Label Content="CreateHouse"></Label>
            <Button Content="CreateHouse" x:Name="btnCreateHouse" Click="btnCreateHouse_Click"></Button>
            <Label Content="CurrentHousePort"></Label>
            <TextBox x:Name="txtCurrentHousePort"></TextBox>
            <Label Content="EnterHouse"></Label>
            <Label Content="HousePort"></Label>
            <TextBox x:Name="txtHousePort"></TextBox>
            <Button Content="EnterHouse" x:Name="btnEnterHouse" Click="btnEnterHouse_Click" ></Button>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="Ognas.Client.UserNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UserNameWindow" Height="200" Width="300">
    <StackPanel Margin="5">
        <Label x:Name="lblError" Foreground="Red"></Label>
        <TextBlock Text="Please enter your user name" FontWeight="Bold" />
        <TextBox x:Name="ResponseTextBox" />
        <Button Content="OK" x:Name="btnOk" Click="btnOk_Click" />
    </StackPanel>
</Window>
